# Environment Configuration for AgriSphere Backend
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# HTTPS Configuration
SSL_ENABLED=false
SSL_PORT=5001
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
# SSL_CA_PATH=./ssl/ca.pem  # Optional: Only needed for CA-signed certificates
HTTP_REDIRECT=false

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/agrisphere
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agrisphere?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# OpenEPI API Configuration - OAuth2 client credentials for plant health analysis
OPENEPI_CLIENT_ID=your-openepi-client-id
OPENEPI_CLIENT_SECRET=your-openepi-client-secret
OPENEPI_API_URL=https://api.openepi.io
OPENEPI_REQUEST_TIMEOUT_MS=30000

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Multiple origins separated by commas (no spaces around commas)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001
# For production, add your domain(s):
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=info